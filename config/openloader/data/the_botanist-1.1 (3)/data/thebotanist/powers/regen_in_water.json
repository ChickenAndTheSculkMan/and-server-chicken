{
	"name": "Quenching",
	"description": "Your body gets hydrated in water. When wet, you will gain Regeneration I. You can also heal with bottles of water.",

	"type": "origins:multiple",
	"whilst_in_water": {
		"type": "origins:stacking_status_effect",
		"min_stacks": -3,
		"max_stacks": 1,
		"duration_per_stack": 100,
		"tick_rate": 20,
		"effect": {
			"effect": "minecraft:regeneration",
			"is_ambient": true,
			"show_particles": false,
			"show_icon": false
		},
		"condition": {
			"type": "origins:or",
			"conditions": [
				{
					"type": "origins:fluid_height",
					"fluid": "minecraft:water",
					"comparison": ">",
					"compare_to": 0.0
				},
				{
					"type": "origins:in_rain"
				},
				{
					"type": "origins:in_block",
					"block_condition": {
						"type": "origins:block",
						"block": "minecraft:water_cauldron"
					}
				}
			]
		}
	},
	"drinking_water": {
		"type": "origins:action_on_item_use",
		"trigger": "finish",
        "item_action": {
			"type": "origins:holder_action",
			"action": {
				"type": "origins:heal",
				"amount": 3
			}
		},
		"item_condition": {
			"type": "origins:and",
			"conditions": [
				{
					"type": "origins:ingredient",
					"ingredient": {
						"item": "minecraft:potion"
					}
				},
				{
					"type": "origins:nbt",
					"nbt": "{Potion:\"minecraft:water\"}"
				}
			]
		}
	}
}
